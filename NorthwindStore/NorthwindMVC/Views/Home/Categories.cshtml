@using NorthwindDatabase
@model IEnumerable<Category>
@{
    string title = "Categories";
    ViewData["Title"] = title;
}
<h2>@title</h2>
<hr />
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Category c in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => c.CategoryId)</td>
                <td>
                    <a asp-controller="Home" asp-action="Category" asp-route-id="@c.CategoryId">
                        @Html.DisplayFor(modelItem => c.CategoryName)
                    </a>
                </td>
                <td>@Html.DisplayFor(modelItem => c.Description)</td>
            </tr>
        }    
        </tbody>
    </table>
</div>