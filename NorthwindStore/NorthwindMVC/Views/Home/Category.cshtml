@using NorthwindDatabase
@model IEnumerable<Product>
@{
    string title = ViewData["CategoryName"].ToString();
    ViewData["Title"] = title;
}
<h2>@title</h2>
<hr />
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Supplier's Company Name</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
            </tr>
        </thead>
        <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => p.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => p.Supplier.CompanyName)</td>
                <td>@Html.DisplayFor(modelItem => p.UnitPrice)</td>
                <td>@Html.DisplayFor(modelItem => p.UnitsInStock)</td>
            </tr>
        }    
        </tbody>
    </table>
</div>